---
import { clsx } from "clsx";

interface Props {
  href: string;
  class?: string;
  mini?: boolean;
}
---

<a
  href={Astro.props.href}
  class={clsx(
    Astro.props.mini ? "p-2 text-md" : "p-4 rounded-full text-lg",
    "no-underline bg-accent-600 hover:bg-opacity-85 text-white font-bold rounded-full dark:bg-accent-200 dark:text-gray-900 dark:hover:bg-opacity-85",
    Astro.props.class,
  )}><slot /></a
>
